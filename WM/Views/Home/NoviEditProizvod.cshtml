@using WM.Models;
@{
    ViewBag.Title = "NoviProizvod";
    List<Kategorija> Kategorije = (List<Kategorija>)ViewData["Kategorije"];
    List<Dobavljac> Dobavljaci = (List<Dobavljac>)ViewData["Dobavljaci"];
    List<Proizvodac> Proizvodaci = (List<Proizvodac>)ViewData["Proizvodaci"];
    Proizvod Proizvod = (Proizvod)ViewData["Proizvod"];
}

<h2>Novi proizvod</h2>

<form action="~/Home/SnimiProizvod">
    <input type="hidden" name="Id" value="@Proizvod.Id" />
    <input name="NazivProizvoda" class="form-control" type="text" placeholder="Naziv proizvoda" value="@Proizvod.Naziv" required />

    <textarea name="OpisProizvoda" class="form-control" placeholder="Opis" required>@Proizvod.Opis</textarea>

    <input name="CenaProizvoda" class="form-control" type="text" placeholder="Cena" value="@Proizvod.Cena" min="1" />

    <select name="Kategorija" class="form-control" required>
        @foreach (var item in Kategorije)
        {
            if (item.Id == Proizvod.KategorijaId)
            {
                <option value="@item.Id" selected>@item.Naziv</option>
            }
            else
            {
                <option value="@item.Id">@item.Naziv</option>
            }
        }
    </select>

    <select name="Dobavljac" class="form-control" required>
        @foreach (var item in Dobavljaci)
        {
            if (item.Id == Proizvod.DobavljacId)
            {
                <option value="@item.Id" selected>@item.Naziv</option>
            }
            else
            {
                <option value="@item.Id">@item.Naziv</option>
            }
        }
    </select>

    <select name="Proizvodac" class="form-control" required>
        @foreach (var item in Proizvodaci)
        {
            if (item.Id == Proizvod.ProizvodacId)
            {
                <option value="@item.Id" selected>@item.Naziv</option>
            }
            else
            {
                <option value="@item.Id">@item.Naziv</option>
            }
        }
    </select>

    <input class="btn btn-success" type="submit" value="Snimi" />
</form>