@model IEnumerable<WM.Models.Proizvod>
@{
    ViewBag.Title = "Home Page";
}

<a class="btn btn-primary" href="~/Home/NoviEditProizvod">Novi proizvod</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Proizvod:</th>
            <th>Opis:</th>
            <th>Cena:</th>
            <th>Kategorija:</th>
            <th>Dobavljac:</th>
            <th>Proizvodi:</th>
            <th>Akcije:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Naziv</td>
            <td>@item.Opis</td>
            <td>@item.Cena</td>
            <td>@item.Kategorija.Naziv</td>
            <td>@item.Dobavljac.Naziv</td>
            <td>@item.Proizvodac.Naziv</td>
            <td>
                <a class="btn btn-default" href="~/Home/NoviEditProizvod?Id=@item.Id">Edit</a>
                <a class="btn btn-danger" href="~/Home/DeleteProizvod?Id=@item.Id">Delete</a>
            </td>
        </tr>
        }
        
    </tbody>
</table>



